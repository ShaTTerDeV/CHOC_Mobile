            android:name=".SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".facts_activity" />
        <activity
            android:name=".dashboard_activity"
            android:label="@string/title_activity_dashboard_activity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".register_activity"
            android:label="@string/title_activity_register_activity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".register_type"
            android:label="@string/title_activity_register_type"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".login_activity"
            android:label="@string/title_activity_login_activity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".contact_activity"
            android:label="@string/title_activity_contact_activity"
            android:theme="@style/AppTheme" >
        </activity>
    </application>

</manifest>
